<p id="notice"><%= notice %></p>
<div class="show_reciepes">
	<table class="table">
		<tr>
			<th><strong>Recipes_name:</strong></th>
			<th><strong>Ingredients:</strong></th>
			<th><strong>Recipes_type:</strong></th>
			<th><strong>Description</strong></th>
			<th><strong>Email</strong></th>
			<th><strong>Image</strong></th>
		</tr>
		<tr>
			<td><%= @recipe.recipes_name %></td>
			<td><%= @recipe.ingredients %></td>
			<td><%= @recipe.recipes_type %></td>
			<td><%= @recipe.description %></td>
			<td><%= @recipe.email %></td>
			<td><%= image_tag @recipe.image_url(:thumb).to_s if @recipe.image? %></td>
		</tr>
	</table>
</div>
<% if can? :update, @recipe %>
	<%= link_to 'Edit', edit_recipe_path(@recipe) %> |
<% end %>
<%= link_to 'Back', recipes_path %>
