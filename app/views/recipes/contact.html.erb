<div class="contact_us">
	<%= form_tag ("/recipes/contact_us"), :id => "contactForm" do %>
		<div class="u_name">
			Name:-
			<%= text_field_tag :name, nil, :placeholder => 'Enter your name' %>
		</div>
		</br>
		<div class="u_mail">
			Email:-
			<%= text_field_tag :email, nil, :placeholder => 'Enter your email' %>
		</div>
		</br>
		<div class="u_message">
			Message:-
			<%= text_area_tag :message, nil, :placeholder => 'youre message' %>
		</div>
		</br>
		<div class="u_submit">
			<%= submit_tag :submit %>
		</div>
	<% end %>
</div>