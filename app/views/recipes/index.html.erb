<%= render 'header' %>
<p id="notice"><%= notice %></p>

<h1>Recipes</h1>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <th><strong>Recipes_name:</strong></th>
        <th><strong>Ingredients:</strong></th>
        <th><strong>Recipes_type:</strong></th>
        <th><strong>Description</strong></th>
        <th><strong>Email</strong></th>
        <th><strong>Image</strong></th>
      </tr>
      <tr>
        <td><%= recipe.recipes_name %></td>
        <td><%= recipe.ingredients %></td>
        <td>
          <% if recipe.recipes_type == true %>
            Pure-veg
          <% else %>
            Non-veg
          <% end %>
        </td>
        <td><%= recipe.description %></td>
        <td><%= recipe.email %></td>
        <td><%= image_tag recipe.image_url(:thumb).to_s if recipe.image? %></td>
      </tr>
      <tr>
        <% if can? :read, recipe %>
          <td><%= link_to 'Show', recipe %></td>
        <% end %>
        <% if can? :update, recipe %>
          <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <% end %>
        <% if can? :destroy, recipe %>
          <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Recipe', new_recipe_path %>


<div class="contact">
  <%= link_to 'Contact us', contact_recipes_path %>
</div>