<%= form_for @recipe, :html => {:multipart => true} do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@recipe.errors.count, "error") %>
          prohibited
            This recipes from being saved:
      </h2>
      <ul>
        <%= @recipe.errors.full_message.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :recipes_name %></br>
    <%= f.text_field(:recipes_name, class: "field", data: { :validation => "required validate_max_length length50", "validation-error-msg" => "This field is required and cannot be longer than 50 characters." }) %>
  </div>
  <div class="field">
    <%= f.label :ingredients %></br>
    <%= f.text_field :ingredients %>
  </div>
  <div class="field">
    <%= f.label :recipes_type %></br>
    <%= f.radio_button :recipes_type, true %> pure-veg
    <%= f.radio_button :recipes_type, false %> non-veg
  </div>
  <div class="field">
    <%= f.label :description %></br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :email %></br>
    <%= f.email_field :email %>
  </div>
  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <!-- <div class="field">
    <%#= f.label :remote_image_url, "or image URL" %>
    <%#= f.text_field :remote_image_url %>
  </div> -->
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<script type="text/javascript">
  $(document).ready(function () { 
   $("#recipe_recipes_name").validate();  
  }); 
</script>
